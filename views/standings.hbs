<div class="background">
    <img class="background-img" src="/background-images/6.jpg" alt="">
    <div class="standings-container custom-container">
        <div class="cont column">
            <div class="standings-choice-buttons-group">
                <a href="/Local-League/standings" class="standings-choice-buttons-group-button overall"><span>Overall</span></a>
                <a href="/Local-League/standings/homewins" class="standings-choice-buttons-group-button home"><span>Home</span></a>
                <a href="/Local-League/standings/guestwins" class="standings-choice-buttons-group-button guest"><span>Guest</span></a>
            </div>
            <div class="standings-table">
                <table id="teams-table">
                    <thead id="thead">
                        <tr>
                            <th class="sticky-rank">
                                <a class='header-button rank-btn'>Rank &nbsp;<i class='fa fa-sort'></i></a>
                            </th>
                            <th class="team-th sticky-team">
                                <a class='header-button team-btn'>Team &nbsp;<i class='fa fa-sort'></i></a>
                            </th>
                            <th>
                                <a class='header-button matches-btn'>Matches &nbsp;</a>
                            </th>
                            <th>
                                <a class='header-button wins-btn'>W &nbsp;<i class='fa fa-sort'></i></a>
                            </th>
                            <th>
                                <a class='header-button draws-btn'>D &nbsp;<i class='fa fa-sort'></i></a>
                            </th>
                            <th>
                                <a class='header-button losses-btn'>L &nbsp;<i class='fa fa-sort'></i></a>
                            </th>
                            <th>
                                <a class='header-button goals-for-btn'>GF &nbsp;<i class='fa fa-sort'></i></a>
                            </th>
                            <th>
                                <a class='header-button goals-against-btn'>GA &nbsp;<i class='fa fa-sort'></i></a>
                            </th>
                            <th>
                                <a class='header-button goal-diff-btn'>GD &nbsp;<i class='fa fa-sort'></i></a>
                            </th>
                            <th class="sticky-points">
                                <a class='header-button points-btn'>PTS &nbsp;<i class='fa fa-sort'></i></a>
                            </th>
                        </tr>
                    </thead>
                    <tbody id="tbody">
                        {{#each team}}
                        <tr>
                            <td class="rank-td"><div class="ranking{{rank}}">{{rank}}</div></td>
                            <td class="team-td"><div class="team"><a class="logo-team" href="/Local-League/teams/{{name}}"><img src="/team-icons/{{logo}}" alt="{{name}}"></a><a class="name-team" href="/Local-League/teams/{{name}}">{{name}}</a></div></td>
                            <td>{{matches}}</td>
                            {{#if wins}}
                            <td>{{wins}}</td>
                            {{else if homeWins}}
                            <td>{{homeWins}}</td>
                            {{else}}
                            <td>{{awayWins}}</td>
                            {{/if}}
                            <td>{{draws}}</td>
                            <td>{{losses}}</td>
                            <td>{{goalsFor}}</td>
                            <td>{{goalsAgainst}}</td>
                            <td>{{goalDifference}}</td>
                            <td class="points-td">{{points}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="/javascript/standings.js" defer></script>